.label-pack, .pack-wrap
  width 800px
  margin 0 auto

  @media(max-width: 1160px)
    width 720px
  @media(max-width: 840px)
    width 640px
  @media(max-width: 640px)
    width 400px
  @media(max-width: 440px)
    width 240px

pack-icons
  display block
  overflow hidden

  .icon
    cursor pointer
    width 70px
    height 70px
    margin 5px
    padding 10px
    border solid 1px #eee
    border-radius 10px
    display inline-block
    transition opacity 0.2s ease-out

    .md-button-inner
      padding 10px

    &:hover
      opacity 0.8

.pack-info
  .row
    padding 30px

  md-input-group
    margin 5px
    font-size 22px

  input
    width 100%

  .row.actions
    text-align right
    font-size 1.5em

  .upload-symbol
    font-size 150px

  .upload-info
    padding 20px

  .upload-font, .upload-css
    text-align center
    background #ddd
    color #999
    border #ccc 1px solid
    transition background 0.2s ease-out

    &.upload-drag-over
      background #eee

    &.success
      background #BDFFBD
      border-color #89FF89
      color #36D735

      &.upload-drag-over
        background #D8FFEA

    &.error
      background #FFBEA2
      border-color #FF956B
      color #D8653B

      &.upload-drag-over
        background #FFE8E1

    &.processing
      background #FDFFB1
      border-color #FBFF45
      color #FFC108

      &.upload-drag-over
        background #FDFFB1

  .row.delete-action
    color #FF5F00

    a
      color inherit

    button.delete-button
      position relative
      color #FF5F00
      width 100%
      padding 10px
      background white
      border-radius 3px
      border #FF5F00 1px solid


.pack-icon-info
  .item-info
    height 200px

    .icon
      height 160px
      padding 10px
      display none

      @media(min-width: 600px)
        &[show-sm]
          display block

      svg
        height 100%
        width 100%

    .name
      text-align center
      font-size 18px
      padding 10px
      text-overflow ellipsis
      white-space nowrap

  .item-actions
    overflow-y scroll

    .title
      text-transform uppercase
      font-weight normal
      font-size 14px
      color #aaa
      padding 0 5px

    .collections
      margin 10px 0
      max-height 400px
      overflow-y scroll

    .collection
      height 40px
      line-height 40px
      padding 0 10px
      transition background-color 0.1s ease-out
      color #666
      cursor pointer
      position relative

      &:hover
        background-color rgba(0, 0, 0, 0.1)
        color #69f

      i.icon-collections
        width 20px


.pack-icon-search
  text-align center
  padding 10px

  input[type=search]
    background #eee
    outline none
    width 200px
    height 24px
    text-align center
    border none
    border-radius 3px
