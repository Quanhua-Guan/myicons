.md-sidenav-left
  z-index 8

  a 
    text-decoration none

  .avatar-bar
    .avatar-wrap
      margin 20px auto
      height 100px
      width 100px
      background #ccc
      border-radius 50%
      overflow hidden

    .name-wrap
      text-align center

  .menu-item
    z-index 1
    width 100%
    border none
    height 40px
    display block
    cursor pointer
    line-height 40px
    padding 0 15px 0 40px
    position relative
    text-overflow ellipsis
    transition 0.2s ease-out
    transition-property height, background, opacity
    overflow hidden
    white-space nowrap

    &.menu-title
      padding-left 15px
      text-transform uppercase

      .add-item
        display inline-block
        float right
        opacity 0.5
        transition opacity 0.2s ease-out

        &:hover
          opacity 0.9

    &.ng-hide
      opacity 0
      height 0

    .menu-icon
      font-size 18px
      width 20px

  .menu-item
    &.ng-enter, &.ng-leave-active
      height 0
      opacity 0

    &.ng-enter.ng-enter-active
      height 40px
      opacity 1
