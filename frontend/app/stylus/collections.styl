.collection-icons
  width 800px
  margin 0 auto
  @media(max-width: 1160px)
    width 720px
  @media(max-width: 840px)
    width 100%

  .icon
    width 80px
    height 80px
    padding 10px

  .icon-item
    transition 0.4s ease-out

    md-item-content
      overflow hidden
      height 80px
      transition 0.4s ease-out
      transition-property height, opacity

    &.ng-leave.ng-leave-active md-item-content
      height 0
      opacity 0

    .icon-name-label
      md-button
        transition opacity 0.2s ease-out

        button
          padding 0

        &.ng-hide
          opacity 0

    .icon-info
      font-size 28px
      color #999

      input
        color #666
        border none
        outline none
        width 60%
        text-decoration underline
        transition color 0.2s ease-out

        &:focus
          color #333

        &.ng-invalid
          color rgb(252, 38, 7)

    .icon-actions
      width 80px
      float right

      button
        padding 0
        margin-right 5px

      i
        font-size 30px
        line-height 36px

.collection-info
  .row
    padding 30px

  md-input-group
    margin 5px
    font-size 22px

  input
    width 100%

  .row.livetesting
    padding 30px 35px
    font-size 14px

    pre
      padding 5px
      overflow-x scroll
      background #eee
      border-radius 4px

    .retoken
      cursor pointer
      color #fc8e29

  .row.actions
    text-align right
    font-size 1.5em

  .download-collection
    display inline-block
    font-size 24px
    color #008BEE
    text-decoration none
    position relative
    line-height 40px
    text-transform uppercase
    float left

    i
      font-size 28px
      width 25px

  .row.delete-action
    color #FF5F00

    a
      color inherit

    button.delete-button
      position relative
      color #FF5F00
      width 100%
      padding 10px
      background white
      border-radius 3px
      border #FF5F00 1px solid

.upload-svg
  text-align center
  min-height 100px
  position relative

  color #999
  border #eee 1px solid
  margin 20px 0
  padding 20px
  background #fff
  transition background 0.2s ease-out

  &.upload-drag-over
    background #eee

  .upload-symbol
    font-size 64px

  .svg-invalid
    color #D8653B

  .upload-svg-select
    cursor pointer
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
