nav-back = #252a3a
nav-fore = #ccc
nav-title-fore = #565d64
label-color = #888
label-focused-color = #444
color-primary = #29b6f6
color-warn = #FC8E29
color-safe = #2baf2b
color-danger = #FC2607
color-disabled = #ccc

.md-sidenav-left.md-mydark-theme
    color nav-fore
    background nav-back
    a
      color nav-fore
      background transparent

    .menu-item
      background rgba(255, 255, 255, 0)

      &:hover
        background rgba(255, 255, 255, 0.05)

      &.menu-title
        color nav-title-fore
        border-bottom 1px solid rgba(0, 0, 0, 0.2)

      &.active
        background rgba(0, 0, 0, 0.2)

.view-toolbar.md-mydark-theme
  border-bottom 1px solid #eee
  .tab-item.active
    background rgba(0, 0, 0, 0.1)

input.ng-invalid
  color color-danger

md-input-group.md-mydark-theme
  label
    color label-color

  &.md-input-focused
    label
      color label-focused-color

    input
      border-bottom-width 1px
      border-bottom-color label-focused-color

  &.ng-invalid
    label
      color color-danger

    input
      border-bottom-color color-danger

md-button
  &.md-outlined
    border-width 1px
    border-style solid
    border-radius 5px

  &.md-primary
    color color-primary
    border-color color-primary

  &.md-warn
    color color-warn
    border-color color-warn

  &.md-safe
    color color-safe
    border-color color-safe

  &.md-danger
    color color-danger
    border-color color-danger

  &[disabled]
    color color-disabled
    border-color color-disabled

md-tooltip
  .md-background
    background rgba(0, 0, 0, 0.8)

  .md-content
    color #fff

md-divider.md-mydark-theme
  border-top 1px solid #eee

md-bottom-sheet.md-mydark-theme
  border-top-color #eee
  background rgba(250, 250, 250, 0.95)

  .container
    width 100%
    height 100%
    max-width 720px
    margin 0 auto

  @media (min-width: 960px)
    padding-left 170px

md-backdrop.md-mydark-theme
  background rgba(0, 0, 0, 0.2)
